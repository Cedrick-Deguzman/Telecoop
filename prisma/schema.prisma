generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
}

model Plan {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  speed     String
  price     Float
  color     String
  features  Json
  icon      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  clients   client[] @relation("PlanClients")
}

model client {
  id            Int       @id @default(autoincrement())
  name          String
  accountNumber String    @unique
  phone         String?
  email         String?
  installationDate DateTime
  planId        Int?
  plan          Plan?     @relation("PlanClients", fields: [planId], references: [id])
  status        String
  monthlyFee    Float
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  payment       payment[]
}

model payment {
  id        Int      @id @default(autoincrement())
  clientId  Int
  amount    Float
  date      DateTime @default(now())
  createdAt DateTime @default(now())
  client    client   @relation(fields: [clientId], references: [id])

  @@index([clientId], map: "Payment_clientId_idx")
}