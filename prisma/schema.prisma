generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
}

enum ClientStatus {
  active
  inactive
}

enum InvoiceStatus {
  paid
  pending
  overdue
}

enum PaymentMethod {
  cash
  gcash
  bank
}

model Plan {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  speed     String
  price     Float
  color     String
  features  Json
  icon      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  clients   Client[] @relation("PlanClients")
  isActive Boolean @default(true)

}

model Client {
  id            Int       @id @default(autoincrement())
  name          String
  accountNumber String    @unique
  phone         String?
  email         String?
  installationDate DateTime
  dueDate       DateTime
  planId        Int?
  plan          Plan?     @relation("PlanClients", fields: [planId], references: [id])
  status        String
  monthlyFee    Float
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  payment       Payment[]
  invoices      Invoice[]
  @@map("client")
}

model Invoice {
  id            Int            @id @default(autoincrement())
  clientId      Int

  amount        Float
  billingDate   DateTime
  dueDate       DateTime

  status        InvoiceStatus  @default(pending)
  paidDate      DateTime?
  paymentMethod PaymentMethod?

  referenceNumber  String?
  createdAt     DateTime @default(now())

  client        Client   @relation(fields: [clientId], references: [id])

  @@index([clientId], map: "Invoice_clientId_idx")
}

model Payment {
  id            Int      @id @default(autoincrement())
  clientId      Int
  amount        Float
  paymentDate   DateTime @default(now())
  method        PaymentMethod?
  createdAt     DateTime @default(now())
  client        Client   @relation(fields: [clientId], references: [id])
  referenceNumber  String?
  
  @@index([clientId], map: "Payment_clientId_idx")
  @@map("payment")
}